<form class="container-md" action="/clerk/edit-mealkit" , method="post", enctype="multipart/form-data">
    <div class="col-md-8 container-md signIn my-5">
        <h1 class="text-center fw-bolder">Change field(s) from your selected meal kit (Note: only touch the field(s) you'd like to edit)</h1>
        <div class="mb-3 mx-5">
            {{!-- id --}}
            <input type="hidden" class="form-control" name="id" value = {{id}}/>
            {{!-- title --}}
            <label for="title" class="form-label">Meal-kit Title:</label>
            <textarea rows="1" cols="33" type="text" class="form-control " id="title" placeholder="Enter title" name="title">{{object.title}}</textarea>
            {{#if validationMessages.title}}
            <p style="color: red;">{{validationMessages.title}}</p>
            {{/if}}
        </div>
        {{!-- include --}}
        <div class="mb-3 mx-5">
            <label for="include" class="form-label">Include/Ingredients:</label>
            <textarea rows="5" cols="33" type="text" class="form-control " id="include" placeholder="Enter include/Ingredients" name="include"
                >{{object.include}}</textarea>
            {{#if validationMessages.include}}
            <p style="color: red;">{{validationMessages.include}}</p>
            {{/if}}
        </div>

        {{!-- description --}}
        <div class="mb-3 mx-5">
            <label for="description" class="form-label">description:</label>
            <textarea rows="5" cols="33" type="text"  class="form-control " id="description" placeholder="Enter description" name="description"
            >{{object.description}}</textarea>
            {{#if validationMessages.description}}
            <p style="color: red;">{{validationMessages.description}}</p>
            {{/if}}
        </div>

        {{!-- category --}}
        <div class="mb-3 mx-5">
            <label for="category" class="form-label">category:</label>
            <select type="text" class="form-control " id="category" placeholder="Enter category" name="category"
                value={{object.category}}>
                                <option value="spicy">spicy</option>
                                <option value="mild">mild</option>
            </select>
            {{#if validationMessages.category}}
            <p style="color: red;">{{validationMessages.category}}</p>
            {{/if}}
        </div>

        {{!-- price --}}
        <div class="mb-3 mx-5">
            <label for="price"  class="form-label">price:</label>
            <input type="number" step='0.01' min="0" class="form-control " id="price" placeholder="Enter price" name="price" 
                value={{object.price}}>
            {{#if validationMessages.price}}
            <p style="color: red;">{{validationMessages.price}}</p>
            {{/if}}
        </div>

        {{!-- cookingTime --}}
        <div class="mb-3 mx-5">
            <label for="cookingTime" class="form-label">cookingTime:</label>
            <input type="number" min="0" class="form-control " id="cookingTime" placeholder="Enter cookingTime"
                name="cookingTime" value={{object.cookingTime}}>
            {{#if validationMessages.cookingTime}}
            <p style="color: red;">{{validationMessages.cookingTime}}</p>
            {{/if}}
        </div>

        {{!-- serving --}}
        <div class="mb-3 mx-5">
            <label for="servings" class="form-label">Servings for how many people?</label>
            <select type="number" class="form-control " id="servings" name="servings" value={{object.servings}}>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            {{#if validationMessages.customerRating}}
            <p style="color: red;">{{validationMessages.customerRating}}</p>
            {{/if}}
        </div>

        {{!-- customerRating2 --}}
        <div class="mb-3 mx-5"> Is this meal kit to be one of the top meal?
            <label for="customerRating" class="form-label">customerRating:</label>
            <select type="number" class="form-control " id="customerRating" name="customerRating"
                value={{object.customerRating}}>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            {{#if validationMessages.customerRating}}
            <p style="color: red;">{{validationMessages.customerRating}}</p>
            {{/if}}
        </div>

        {{!-- topMeal --}}
        <div class="mb-3 mx-5"> Is this meal kit to be one of the top meal?
                <label for="topMeal" class="form-label">Top meal? </label>
                <select type="text" id="topMeal", name="topMeal" value={{object.topMeal}}>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                </select>
        </div>

        {{!-- image url --}}
        <div class="mb-3 mx-5">
            <label for="image">Upload a meal kit image:</label>
            <br>
            <input type="file" name="image" id="image" />
            {{#if validationMessages.image}}
            <p style="color: red;">{{validationMessages.image}}</p>
            {{/if}}
        </div>


        <div class="d-grid">
            <button type="submit" class="btn btn-warning mb-5 mx-5">Submit</button>
        </div>
    </div>
</form>