{{#if menuCard}}
<div class = "col-md-6 text-center" style= "background-color:white" >
    <hr>
{{/if}}


{{#unless menuCard}}
<div class = "col-xl-4 text-light text-center" style= "background-color:black" >
    <hr>
{{/unless}}
    <h3>{{card.title}}<h3>
    <!--image height is not fixed, so we need to fix the height-->   
    {{#if clerk}}
    <a class="btn btn-warning" href="/clerk/remove-mealkit?id={{card._id}}&title={{card.title}}" role="button">Delete this meal kit</a>
    <a class="btn btn-warning" href="/clerk/edit-mealkit?id={{card._id}}&title={{card.title}}" role="button">Edit this
        meal kit</a>
    {{/if}}



    {{#if @root.customer}}
    <a class="btn btn-warning" href="/customer/mealkit_order?id={{card._id}}" role="button">View the description and Place an order for this meal kit</a>
    {{/if}}

    <img src="{{card.imageUrl}}" class="img-fluid " style= "object-fit:cover  ;width:100%; height:500px" alt="food image">
{{#if menuCard}}



    <p class = "h5">Ingredients: {{card.include}}<p>
    <p class = "h5">Cooking Time: {{card.cookingTime}} mins</p>
{{/if}}
    <p class = "h5">Serving: {{card.servings}} people<p>        
    <p class = "h5">Food Description: {{card.description}}<p>
    <p class = "h5">Customer Rating: {{card.customerRating}}<p>
    <p class = "h5">Price: ${{card.price}}<p>

</div>




