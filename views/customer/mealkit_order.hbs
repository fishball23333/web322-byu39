<div class="container-xl mb-3">


    <!--category level-->

    <div class="row ">
        <!--object level-->

    <div class="col-md-12 text-center" style="background-color:white">
        <h1 class="text-center">{{object.title}}</h1>
        <hr>
        <img src="{{object.imageUrl}}" class="img-fluid " style="object-fit:cover  ;width:100%; height:500px" alt="food image"> 
        <p class="h5">Ingredients: {{object.include}}</p>
        <p class="h5">Cooking Time: {{object.cookingTime}} mins</p>
        <p class="h5">Serving: {{object.servings}} people</p>
        <p class="h5">Food Description: {{object.description}}</p>
        <p class="h5">Customer Rating: {{object.customerRating}}</p>
        <p class="h5">Price: ${{object.price}}</p>
        <div class="d-grid gap-2 my-5">
            <a class="btn btn-warning" href="/customer/add_order?id={{id}}" role="button">Add to the shopping cart</a>
            <a class="btn btn-warning" href="/" role="button">Go back to home page</a>
        </div>
    </div>
    </div>





</div>
